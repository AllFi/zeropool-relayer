{
  "name": "zp-relayer",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "typescript": "^4.3.5",
    "ts-loader": "^9.2.4",
    "chai": "^4.3.4"
  },
  "workspaces": [
    "zp-memo-parser",
    "zp-relayer",
    "test-e2e"
  ],
  "scripts": {
    "initialize": "yarn clean && git submodule update --init && yarn install --unsafe-perm --frozen-lockfile && yarn build:libzeropool-rs-node && yarn build:libzeropool-rs-wasm",
    "build:relayer": "yarn workspace zp-relayer run build",
    "build:memo": "yarn workspace zp-memo-parser run build",
    "build:libzeropool-rs-node": "npm --prefix libzeropool-rs/libzeropool-rs-node run build",
    "build:libzeropool-rs-wasm": "cd libzeropool-rs/libzeropool-rs-wasm && ./scripts/build && cd -"
  }
}